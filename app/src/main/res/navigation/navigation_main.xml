<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/climb">

    <fragment
        android:id="@+id/climb"
        android:name="fi.climbstationsolutions.climbstation.ui.climb.ClimbFragment"
        android:label="ClimbFragment" >
        <action
            android:id="@+id/action_climb_to_adjustFragment"
            app:destination="@id/adjustFragment" />
        <action
            android:id="@+id/action_climb_to_climbOnFragment"
            app:destination="@id/climbOnFragment" />
    </fragment>
    <fragment
        android:id="@+id/statistic"
        android:name="fi.climbstationsolutions.climbstation.ui.statistics.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" />
    <fragment
        android:id="@+id/settings"
        android:name="fi.climbstationsolutions.climbstation.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/adjustFragment"
        android:name="fi.climbstationsolutions.climbstation.ui.climb.adjust.AdjustFragment"
        android:label="fragment_adjust"
        tools:layout="@layout/fragment_adjust" >
        <action
            android:id="@+id/action_adjustFragment_to_climbOnFragment"
            app:destination="@id/climbOnFragment" />
    </fragment>
    <fragment
        android:id="@+id/climbOnFragment"
        android:name="fi.climbstationsolutions.climbstation.ui.climb.climbOnfragment.ClimbOnFragment"
        android:label="ClimbOnFragment" >
        <argument
            android:name="profile"
            app:argType="fi.climbstationsolutions.climbstation.network.profile.Profile" />
    </fragment>
</navigation>