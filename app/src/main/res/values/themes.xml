<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClimbStation" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/aldrich</item>
    </style>

    <style name="Theme.ClimbStation.Splash" parent="Theme.ClimbStation">
        <item name="android:windowBackground">@drawable/splash_view</item>
    </style>

    <style name="TimePickerTheme">
        <item name="colorAccent">@color/white</item>
        <!--divider line color-->
        <item name="colorControlNormal">@color/climbstation_red</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--For reading long texts (such as info popups)-->
    <style name="CustomFont2">
        <item name="android:fontFamily">@font/actor</item>
    </style>

    <style name="Theme.ClimbStation.Activity">
        <item name="android:background">@drawable/extra_dark_mountain</item>
    </style>

    <style name="Theme.ClimbStation.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="logo">@drawable/cropped_logo_whitened_3</item>
        <item name="menu">@menu/top_app_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="Theme.ClimbStation.FragmentContainer">
        <item name="defaultNavHost">true</item>
        <item name="android:name">androidx.navigation.fragment.NavHostFragment</item>
    </style>

    <style name="Theme.ClimbStation.BottomNavigationBar" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="menu">@menu/bottom_navigation_menu</item>
    </style>

    <style name="Theme.ClimbStation.SideSheet">
        <item name="android:background">@color/card_white</item>
        <item name="android:divider">@android:color/background_light</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:groupIndicator">@null</item>
    </style>

    <style name="Theme.ClimbStation.Text" />

    <style name="Theme.ClimbStation.Text.White" parent="Theme.ClimbStation.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.ClimbStation.Text.Black" parent="Theme.ClimbStation.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.ClimbStation.Text.Gray" parent="Theme.ClimbStation.Text">
        <item name="android:textColor">#757575</item>
    </style>

    <style name="Theme.ClimbStation.Text.White.Title1" parent="Theme.ClimbStation.Text.White">
        <item name="android:textSize">@dimen/title_big_size</item>
    </style>

    <style name="Theme.ClimbStation.Text.White.Title2" parent="Theme.ClimbStation.Text.White">
        <item name="android:textSize">@dimen/title_2_size</item>
    </style>

    <style name="Theme.ClimbStation.Text.White.Title3" parent="Theme.ClimbStation.Text.White">
        <item name="android:textSize">@dimen/title_3_size</item>
    </style>

    <style name="Theme.ClimbStation.Text.Black.Title1" parent="Theme.ClimbStation.Text.Black">
        <item name="android:textSize">@dimen/title_1_size</item>
    </style>

    <style name="Theme.ClimbStation.Text.Black.Title2" parent="Theme.ClimbStation.Text.Black">
        <item name="android:textSize">@dimen/title_2_size</item>
    </style>

    <style name="Theme.ClimbStation.Text.Black.Title3" parent="Theme.ClimbStation.Text.Black">
        <item name="android:textSize">@dimen/title_3_size</item>
    </style>

    <style name="Theme.ClimbStation.Text.Gray.Title1" parent="Theme.ClimbStation.Text.Gray">
        <item name="android:textSize">@dimen/title_3_size</item>
    </style>

    <style name="Theme.ClimbStation.Text.White.Text1" parent="Theme.ClimbStation.Text.White">
        <item name="android:textSize">@dimen/text_1_size</item>
    </style>

    <style name="Theme.ClimbStation.Text.White.Text2" parent="Theme.ClimbStation.Text.White">
        <item name="android:textSize">@dimen/text_2_size</item>
    </style>

    <style name="Theme.ClimbStation.Text.White.Text3" parent="Theme.ClimbStation.Text.White">
        <item name="android:textSize">@dimen/text_3_size</item>
    </style>

    <style name="Theme.ClimbStation.Text.White.Text4" parent="Theme.ClimbStation.Text.White">
        <item name="android:textSize">@dimen/text_4_size</item>
    </style>

    <style name="Theme.ClimbStation.Text.White.AutoTitle1" parent="Theme.ClimbStation.Text.White">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:paddingStart">@dimen/title_auto_padding</item>
        <item name="android:paddingEnd">@dimen/title_auto_padding</item>
    </style>

    <style name="Theme.ClimbStation.Text.Black.Text1" parent="Theme.ClimbStation.Text.Black">
        <item name="android:textSize">@dimen/text_1_size</item>
    </style>

    <style name="Theme.ClimbStation.Text.Black.Text2" parent="Theme.ClimbStation.Text.Black">
        <item name="android:textSize">@dimen/text_2_size</item>
    </style>

    <style name="Theme.ClimbStation.Text.White.ListItemHeader1" parent="Theme.ClimbStation.Text.White.Text1">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ClimbStation.Text.White.ListItemHeader2" parent="Theme.ClimbStation.Text.White.Text1">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.ClimbStation.ListItem">
        <item name="android:background">@drawable/rv_background_layout</item>
        <item name="android:layout_marginBottom">@dimen/list_item_bottom_margin</item>
    </style>

    <style name="Theme.ClimbStation.ListItem.CustomProfile">
        <item name="android:padding">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.ClimbStation.EditText" />
    <style name="Theme.ClimbStation.EditText.Step" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Theme.ClimbStation.Button" parent="Widget.MaterialComponents.Button" />
    <style name="Theme.ClimbStation.Button.Big" parent="Theme.ClimbStation.Button" >
        <item name="android:textSize">@dimen/button_big_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/button_big_padding</item>
    </style>
    <style name="Theme.ClimbStation.Button.Normal" parent="Theme.ClimbStation.Button" >
        <item name="android:textSize">@dimen/button_normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/button_normal_padding</item>
    </style>
    <style name="Theme.ClimbStation.Button.Normal.Text" parent="Widget.MaterialComponents.Button.OutlinedButton" >
        <item name="android:textSize">@dimen/button_normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/button_normal_padding</item>
    </style>
    <style name="Theme.ClimbStation.Button.Normal.Green" parent="Theme.ClimbStation.Button.Normal" >
        <item name="android:backgroundTint">@color/button_green</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>