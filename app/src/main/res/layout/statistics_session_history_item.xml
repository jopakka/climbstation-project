<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:gravity="center_vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/climbstation_red_list_item">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/historyItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingBottom="0dp"
                android:paddingTop="8dp"
                android:paddingEnd="0dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:drawableLeftCompat="@drawable/ic_save_24"
                android:drawablePadding="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/historyDate"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/stat_sess_history_item_date"
                android:textColor="@color/white"
                android:gravity="end"
                android:paddingEnd="20dp"
                android:paddingStart="50dp"/>

            <TextView
                android:id="@+id/historyDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/historyItem"
                app:layout_constraintTop_toBottomOf="@+id/historyDate"
                android:text="@string/stat_sess_history_item_duration"
                android:textColor="@color/white"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:paddingStart="70dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/historyDifficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/historyItem"
                app:layout_constraintTop_toBottomOf="@+id/historyDuration"
                android:text="@string/stat_sess_history_item_difficulty"
                android:textColor="@color/white"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:paddingStart="70dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/historyDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/historyItem"
                app:layout_constraintTop_toBottomOf="@+id/historyDifficulty"
                android:text="@string/stat_sess_history_item_distance"
                android:textColor="@color/white"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:paddingStart="70dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/historySpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/historyItem"
                app:layout_constraintTop_toBottomOf="@+id/historyDistance"
                android:text="@string/stat_sess_history_item_speed"
                android:textColor="@color/white"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:paddingStart="70dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/historyItemDelete"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="0dp"
                android:contentDescription="@string/content_description_history_delete"
                android:backgroundTint="@color/transparent"
                app:icon="@drawable/ic_delete_24"
                app:iconTint="@color/white"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>