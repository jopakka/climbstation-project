    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/decrement_number"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_arrow_left_24"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/number_list"
            app:layout_constraintEnd_toStartOf="@+id/number_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/number_list" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/number_list"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toStartOf="@+id/increment_number"
            app:layout_constraintStart_toEndOf="@+id/decrement_number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/numbers_list" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/increment_number"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_arrow_left_24"
            android:rotation="180"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/number_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number_list"
            app:layout_constraintTop_toTopOf="@+id/number_list" />

